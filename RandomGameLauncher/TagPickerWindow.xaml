<Window x:Class="RandomGameLauncher.TagPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Tags"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Border x:Name="RootHost"
            Background="{DynamicResource App.WindowBackgroundBrush}"
            BorderBrush="{DynamicResource App.BorderBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource App.CornerRadius.L}"
            Padding="14">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <DockPanel>
                <TextBlock Text="Filter tags:" VerticalAlignment="Center" Foreground="{DynamicResource App.SubtleTextBrush}" />
                <CheckBox x:Name="MatchAllBox" Content="Match all" Margin="14,0,0,0" VerticalAlignment="Center" />
            </DockPanel>

            <TextBox Grid.Row="1" x:Name="SearchBox" Width="420" Margin="0,10,0,0" />

            <Border Grid.Row="2" Margin="0,10,0,0"
                    Background="{DynamicResource App.SurfaceElevatedBrush}"
                    BorderBrush="{DynamicResource App.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource App.CornerRadius.M}">
                <ScrollViewer Height="280" Padding="6">
                    <ListBox x:Name="TagsList" BorderThickness="0">
                        <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}"
                                      Foreground="{DynamicResource App.TextBrush}"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Width="90" Content="Clear" Margin="0,0,8,0" Click="Clear_Click" />
                <Button Width="90" Content="Cancel" IsCancel="True" Margin="0,0,8,0" />
                <Button Width="90" Content="OK" IsDefault="True" Click="Ok_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
