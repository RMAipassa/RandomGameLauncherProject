<Application x:Class="RandomGameLauncher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Theme.Shared.xaml" />
                <!-- default; replaced at runtime by ThemeManager -->
                <ResourceDictionary Source="Themes/Theme.Light.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- Updated at runtime for Windows accent integration -->
            <SolidColorBrush x:Key="App.AccentBrush" Color="#FF0078D4" />
            <SolidColorBrush x:Key="App.AccentSoftBrush" Color="#330078D4" />
            <SolidColorBrush x:Key="App.AccentStrongBrush" Color="#FF0A64AD" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
