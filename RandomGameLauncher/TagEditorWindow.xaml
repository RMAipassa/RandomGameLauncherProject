<Window x:Class="RandomGameLauncher.TagEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Tags"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Border x:Name="RootHost"
            Background="{DynamicResource App.WindowBackgroundBrush}"
            BorderBrush="{DynamicResource App.BorderBrush}"
            BorderThickness="1"
            CornerRadius="{StaticResource App.CornerRadius.L}"
            Padding="14">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="TitleText"
                       Text="Tags"
                       FontWeight="SemiBold" />

            <TextBox Grid.Row="1" x:Name="SearchBox" Width="420" Margin="0,10,0,0" />

            <Border Grid.Row="2" Margin="0,10,0,0"
                    Background="{DynamicResource App.SurfaceElevatedBrush}"
                    BorderBrush="{DynamicResource App.BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="{StaticResource App.CornerRadius.M}">
                <ScrollViewer Height="260" Padding="6">
                    <ListBox x:Name="TagsList" BorderThickness="0">
                        <ListBox.ItemTemplate>
                        <DataTemplate>
                            <CheckBox Content="{Binding Name}"
                                      Foreground="{DynamicResource App.TextBrush}"
                                      IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                        </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </ScrollViewer>
            </Border>

            <DockPanel Grid.Row="3" Margin="0,10,0,0">
                <Button DockPanel.Dock="Right" Width="84" Content="Add" Margin="10,0,0,0" Click="Add_Click" />
                <TextBox x:Name="NewTagBox" Width="326" />
            </DockPanel>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
                <Button Width="90" Content="Cancel" IsCancel="True" Margin="0,0,8,0" />
                <Button Width="90" Content="OK" IsDefault="True" Click="Ok_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
